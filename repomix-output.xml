export class ObjectPool {
    constructor(createFn) {
        this.createFn = createFn;
        this.pool = [];
    }

    obtain() {
        return this.pool.length > 0 ? this.pool.pop() : this.createFn();
    }

    free(obj) {
        if (obj.reset) obj.reset();
        this.pool.push(obj);
    }
}
