function playToxicExplosion(e: EffectSystem, x: number, y: number, _c: IEnemyTypeConfig) {
    // –†–∞–¥–∏–∞–ª—å–Ω—ã–µ –∑–µ–ª—ë–Ω—ã–µ –∏—Å–∫—Ä—ã
