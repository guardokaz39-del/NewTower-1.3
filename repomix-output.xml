export class EventEmitter {
    // –•—Ä–∞–Ω–∏–ª–∏—â–µ –ø–æ–¥–ø–∏—Å–æ–∫: '–Ω–∞–∑–≤–∞–Ω–∏–µ_—Å–æ–±—ã—Ç–∏—è' -> [—Å–ø–∏—Å–æ–∫ —Ñ—É–Ω–∫—Ü–∏–π]
    private events: { [key: string]: Listener[] };

