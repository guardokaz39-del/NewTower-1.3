    display?: string;
    alignItems?: string;
    justifyContent?: string;
    marginLeft?: string;
    flex?: string;
    flexShrink?: string;
    flexGrow?: string;
}

export interface IContainerOptions {
    position?: string;
    top?: string;
    left?: string;
    bottom?: string;
    right?: string;
    width?: string;
    height?: string;
    display?: string;
    flexDirection?: string;
    alignItems?: string;
